</p>


<p>
  <table>
    <thead>
      <tr>
        <th>Characters</th>
      </tr>
    </thead>
    <tbody>
      <% @movie["characters"].each do |character| %>
        <% @characters.each do |value| %>
          <% if character == value["url"] %>
            <% id = character.split("/")[5]  %>
            <tr>
              <td>
                <li ><%= value["name"] %></li>
              </td>
            </tr>
          <% end %>
        <% end %>
      <% end %>      
    </tbody>
  </table>
</p>

