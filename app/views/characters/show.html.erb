<p id="notice"><%= notice %></p>
<h1><%=@character["name"] %> </h1>
&nbsp;
&nbsp;

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Height</th>
      <th scope="col">Mass</th>
      <th scope="col">Hair color</th>
      <th scope="col">Skin color</th>
      <th scope="col">Eye color</th>
      <th scope="col">Birth year</th>
      <th scope="col">Gender</th>
      <th scope="col">Homeworld</th>

    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @character["height"] %></td>
        <td><%= @character["mass"] %></td>
        <td><%= @character["hair_color"] %></td>
        <td><%= @character["skin_color"] %></td>
        <td><%= @character["eye_color"] %></td>
        <td><%= @character["birth_year"] %></td>
        <td><%= @character["gender"] %></td>
        <td><%= link_to @homeworld["name"], planet_url(@id_homeworld) %></td>        
      </tr>
  </tbody>
</table>


<div class="row">
  <div class="col-sm-4">
<p>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Films:</th>
      </tr>
    </thead>
    <tbody>
      <% @character["films"].each do |film| %>
        <% @movies.each do |value| %>
          <% if film == value["url"] %>
            <% id = film.split("/")[5]  %>
            <tr>
              <td>
                <li scope="col"><%= link_to value["title"], movie_url(id) %></li>
              </td>
            </tr>
          <% end %>
        <% end %>
      <% end %>      
    </tbody>
  </table>
</p>

</div>
  <div class="col-sm-4">

<p>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>Starships:</th>
      </tr>
    </thead>
    <tbody>
      <% @character["starships"].each do |starship| %>
        <% @starships.each do |value| %>
          <% if starship == value["url"] %>
            <% id = starship.split("/")[5]  %>
            <tr>
              <td>
                <li scope="col"><%= link_to value["name"], starship_url(id) %></li>
              </td>
            </tr>
          <% end %>
        <% end %>
      <% end %>      
    </tbody>
  </table>
</p>

</div></div>
